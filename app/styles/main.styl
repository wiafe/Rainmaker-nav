body
	margin 0
	font-family "Proxima-Nova"
	color $text-color
	background-color $bg-color


/*
 * Grid
 * ====
 */
$xs = 576px
$sm = 768px
$md = 992px
$lg = 1200px

.grid-container
	width 100%
	max-width 1200px
	margin 0 auto

.grid-container *
	box-sizing: border-box

.clearfix:after {
	visibility: hidden;
	display: block;
	font-size: 0;
	content: " ";
	clear: both;
	height: 0;
	}
* html .clearfix             { zoom: 1; } /* IE6 */
*:first-child+html .clearfix { zoom: 1; } /* IE7 */

.row
	list-style none
	margin 0 -15px
	clearfix()

.col
	float left
	position relative
	padding 0 15px 15px
	img
		max-width 100%
		height auto

grid(class = 'xs', columns = 12)
	for colCount in (1 .. columns)
		percentWidth = (1% * ((colCount / columns) * 100))
		.col-{class}-{colCount}
			width percentWidth

/* Base Grid */
grid()

/* Extra Small Size */
@media (min-width: $xs)
	grid('sm')

/* Medium Size */
@media (min-width: $sm)
	grid('md')

/* Large Size */
@media (min-width: $md)
	grid('lg')

/*
 * Helpers
 * =======
 */
.show-sm
	display none
.show-md
	display block
@media (max-width: $sm)
	.show-sm
		display block
	.show-md
		display none
		color #FFFFFF

// General Styles
a
	text-decoration none
	display inline-block

ul
	list-style none
	padding 0
.pull-left
	float left
.pull-right
	float right

.flex-row
	display flex
	flex-direction row
	flex-wrap wrap
	& > .wrapper
		flex-grow 1
		width 50%
		
.container
	width 100%
	max-width 1200px
	margin-right auto
	margin-left auto
	padding-left 20px
	padding-right 20px

header
	background-image url('../images/nav-header@2x.png')
	background-repeat no-repeat
	background-size cover
	background-position center
	padding 20px 0 140px
	color white
	.cta
		text-align center
		margin-top 91px
		img
			margin-bottom 20px
		p
			font-size 22px
			font-weight 100
			margin 0
			margin-top 10px
	.pull-right
		display flex
		margin 0
		& > li
			margin-right 35px
		li > a
			color white
			font-size 12px
			letter-spacing 1px
			transition all 500ms ease
			&:hover
				padding-bottom 5px
				border-bottom 2px solid
		li > .active
			padding-bottom 5px
			border-bottom 2px solid
