		.steps-row
			display flex
			justify-content space-around
			margin-top 71px
			.step
				small
					font-size 14px
					color #197fc2
					margin-top 20px
					letter-spacing 1px
					display block
	.services-container
		display flex
		justify-content space-around
		text-align left
		& > .services-col
			width 23%
			.services-title
				font-size 18px
				letter-spacing 1px
				color #197fc2
				margin-bottom 10px
			.services-info
				font-size 16px
				font-weight 100
				color #5d6265
				margin-top 0
			ul > li
				color #5d6265
				font-size 14px 
				font-weight 100
	.consult-container
		text-align left
		margin-top 61px
		.col-md-6
		.col-sm-6
		.col-xs-6
		.col-md-4
		.col-sm-4
		.col-xs-4
			float left
		.col-md-6
			margin-right 84px
			width 50%
		.col-md-4
			.consult-wrapper
				margin-bottom 20px
		.consult-title
			font-size 18px
			letter-spacing 1px
			color #197fc2
			margin 0
		.consult-info
			font-size 16px
			font-weight 100
			color #5d6265
			line-height 24px
			margin-bottom 0
	.section-question
		position relative
		h6
			font-size 12px
			color #a5aebc
			margin 0 0 15px
			letter-spacing 1px
		.line
			background-color #e76539
			height 2px
			width 96px
			margin 0 auto
	.section-answer
		color #262c35
		font-size 40px
		letter-spacing 1px
		margin 15px 0 5px
		text-transform capitalize
		font-weight 400
	.explanation
		color #5d6265
		font-size 18px
		margin 0 0 15px
		font-weight 100
	.schedule
		border 1px solid #59c77f
		font-size 14px
		color #59c77f
		letter-spacing 1px
		padding 12px 30px
		border-radius 2px
		margin-top 20px
		
.orgs
	text-align center
	display flex
	flex-grow 1
	background-color #f9fbfe
	border-bottom 1px solid #e0e4e9
	& > div
		width 14.2857%
		border-right 1px solid #e0e4e9
		padding 60px 0 50px

.footer {
	background:#293037;
	font-family:Proxima-Nova,
	"Proxima Nova",
	proxima-nova,
	"Helvetica Neue",
	sans-serif;
	width:100%;
	padding-top:56px;
	font-size:14px;
	color:rgba(255,255,255,.5)
}
.footer a {
	color:inherit;
	text-decoration:none
}
.footer ul {
	margin:0;
	padding:0
}
.footer .container {
	max-width:1280px;
	margin-bottom:30px;
	padding-left:15px!important;
	padding-right:15px!important
}
.footer .container h4 {
	color:#fff;
	font-size:16px;
	text-transform:uppercase;
	margin-bottom:15px;
	margin-top:0;
	font-weight:500
}
.footer .container .col {
	float:left;
	width:100%
}
@media (min-width: 768px) {
	.footer .container .col {
		float:left;
		width:17%
	}
}
.footer .container .col ul {
	list-style-type:none
}
.footer .container .col ul li {
	margin-bottom:10px
}
.footer .container .col ul li .country {
	font-weight:600
}
.footer .container .col ul li .country+p {
	font-weight:100;
	margin-top:0
}
.footer .container .col ul li p {
	margin-bottom:18px
}
.footer .container .col ul li a:hover {
	color:inherit;
	text-decoration:underline
}
.footer .container .col .footer-logo {
	vertical-align:middle;
	margin-bottom:20px;
	width:75%;
	height:auto
}
.footer .container .col .number {
	margin-bottom:0
}
.footer .container .col .link {
	margin-bottom:30px;
	color:#63a2d5;
	display:inline-block;
	text-decoration:none
}
.footer .container .col .BBB {
	display:block
}
.footer .copyright {
	background-color:#262c32;
	width:100%;
	font-size:14px;
	text-align:left;
	padding:20px 90px;
}
